<div >
	<form class="form-signin" id="itemListForm" action="$!utilWebconfig.getActionDefaultFontPath()/item/liveTagManage/list" method="GET" role="form">
        <div class="inputGroup whole">
            <div class="input-group inpSingle">
                <span class="input-group-btn">
                    <button class="btn btn-default" type="button">商品名称：</button>
                </span>
                <input type="text"  class="form-control" name="name" value="$!query.name"/>
            </div>
            <div class="input-group inpSingle">
                <span class="input-group-btn">
                    <button class="btn btn-default" type="button">状态：</button>
                </span>
                <select class="form-control" name="state">
					<option value="0" #if($!query.state == 0) selected #end>全部</option>
                    <option value="1" #if($!query.state == 1) selected #end>启用</option>
                    <option value="2" #if($!query.state == 2) selected #end>禁用</option>
                </select>
            </div>
			<div class="btn-group">
                <button type="submit" class="btn btn-primary">查询</button>
            </div>
            <div class="btn-group">
                <button type="reset" class="btn btn-primary">重置</button>
            </div>
        </div>
        <div class="inputGroup whole">
			 <div class="btn-group">
               <button type="button" class="btn btn-primary batch-shelve">批量上架</button>
             </div>
			 <div class="btn-group">
               <button type="button" class="btn btn-primary batch-unshelve">批量下架</button>
             </div>
			 <div class="btn-group">
               <button type="button" class="btn btn-primary batch-deleate">批量删除</button>
             </div>
		 </div>
		 <div class="tableGroup whole">
             <table class="table datatable">
				<thead>
                    <tr>
                        <th>编号</th>
                        <th>商品信息</th>
						<th>目的地</th>
                        <th>类型</th>
                        <th>单价</th>
						<th>发布时间</th>
						<th>操作</th>
                    </tr>
                </thead>
				<tbody >
                    #foreach($item in $pageVo.resultList)
                    <tr id="item_$!{item.id}" item-id="$!item.id">
                        <td>$!item.id</td>
                        <td>$!item.name</td>
						<td>$!item.destString</td>
						<td>$!{utilItem.getItemTypeName($item.type)}</td>
                        <td>$!{utilItem.getItemStatusName($item.status)}</td>
						<td>￥$!{utilMoney.centToYuanMoneyFormat($item.price)}</td>
						<td>$!{utilDate.date2String($item.publishDate)}</td>
                        <td>
                            <button type="button" class="btn btn-primary item-edit" item-id="$!item.id">编辑</button>
							#if($!{item.status} != 1)
							<button type="button" class="btn btn-primary item-enable" item-id="$!item.id">启用</button>
							#else
							<button type="button" class="btn btn-primary item-disable" item-id="$!item.id">停用</button>
							#end
						</td>
                    </tr>
					#end
                </tbody>
            </table>
        </div>
    #*分页*#
    #parse("/page.vm")
    #pageStyle("liveTagForm")
    </form>
</div>
<script>
	var checkedIdList=[];
	$('table.datatable').datatable({
		checkable: true,
		checksChanged: function(event) {
			var temp = [];
			$(event.checks.checks).each(function() {
				var item_id = $("#" + this).attr("item-id");
				temp.push(item_id);
			});
			checkedIdList = temp;
        }
	});
	//批量启用
    $('.batch-enable').click(function(){
		if(checkedIdList.length > 0) {
    		var param = {ids:checkedIdList};
    		$.post("$!{utilWebconfig.getActionDefaultFontPath()}/B2C/liveTagManage/toBatchEnable",param,function(result) {
    			if(result.status == 200) {
    				window.location.reload();
    			} else {
    				layer.alert('批量启用失败', {
    					icon : 2
    				});
    			}
    		},"json");
		} else {
			layer.msg('请选择标签', {
				icon : 2,
				time : 1000
			});
		}
    });
	//批量停用
    $('.batch-disable').click(function(){
		if(checkedIdList.length > 0) {
    		var param = {ids:checkedIdList};
    		$.post("$!{utilWebconfig.getActionDefaultFontPath()}/B2C/liveTagManage/toBatchDisable",param,function(result) {
    			if(result.status == 200) {
    				window.location.reload();
    			} else {
    				layer.alert('批量停用失败', {
    					icon : 2
    				});
    			}
    		},"json");
		}  else {
			layer.msg('请选择标签', {
				icon : 2,
				time : 1000
			});
		}
    });
	// 启用
	$('.item-enable').click(function(){
		var id = $(this).attr("item-id");
		$.post("$!{utilWebconfig.getActionDefaultFontPath()}/B2C/liveTagManage/toEnable/"+id,{},function(result) {
			if(result.status == 200) {
				window.location.reload();
			} else {
				layer.msg('启用失败', {
    				icon : 2,
    				time : 1000
    			});
			}
		},"json");
    });
	// 停用
	$('.item-disable').click(function(){
		var id = $(this).attr("item-id");
		$.post("$!{utilWebconfig.getActionDefaultFontPath()}/B2C/liveTagManage/toDisable/"+id,{},function(result) {
			if(result.status == 200) {
				window.location.reload();
			} else {
				layer.msg('停用失败', {
    				icon : 2,
    				time : 1000
    			});
			}
		},"json");
    });
</script>