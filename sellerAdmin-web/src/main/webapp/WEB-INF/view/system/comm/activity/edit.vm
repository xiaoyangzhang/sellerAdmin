        for(var i = 0;i < skuPropertyShowAll.length;i++){
            trBody += '<tr class="skuTbEdit" skuTrId="' + skuPropertyShowAll[i]['id'] + '">';
            for(var j = 0;j < skuPropertyShowAll[i]['itemSkuPVPairList'].length; j++){
