<!-- head start-->
#set($layout = "/layout/layout-jiuxiu.vm")
<head>
    #parse("layout/layout-meta.vm")
    <title>选择酒店</title>
    <link rel="stylesheet" href="$!rs_js_css_path_jiuxiu/css/addhotelproduct.css">
</head>
<!-- head end-->

<!-- 面包屑 -->
<div class = "comwidth crumbs f12">您所在的位置：添加酒店商品><a class = "f12 gray6">选择酒店</a></div>
<div class = "comwidth clearfix" id = "eredar">
    <div class = "eredar-left">
        <dl class = "first">
            <dd>商品管理</dd>
            <dt class = "one">添加商品</dt>
            <dt>商品列表</dt>
        </dl>
        <dl>
            <dd>添加酒店商品</dd>
            <dt class = "on">选择酒店</dt>
            <dt>基本信息</dt>
            <dt>价格日历</dt>
        </dl>
        <dl>
            <dd>添加景区门票</dd>
            <dt>基本信息</dt>
            <dt>价格日历</dt>
        </dl>
        <dl>
            <dd>订单管理</dd>
            <dt class = "one">订单列表</dt>
        </dl>
        <dl>
            <dd>店铺管理</dd>
            <dt class = "one">基本信息</dt>
            <dt>账户信息</dt>
        </dl>
        <dl>
            <dd>对账管理</dd>
            <dt class = "one">月结账单</dt>
        </dl>
    </div>
    <div class = "eredar-right">
        <div class = "eredar-info clearfix">
            <ul>
                <li class = "first on">基本信息</li>
                <li>价格日历</li>
            </ul>
        </div>
        <div class="panel on">
            <div class="hotelinfo">
                <p>
                    <span class="nm"><span class="bred">*</span><label>酒店信息：</label></span>
						<span class="info-bar">
							<label class="htn">如家酒店望京店</label>
							<label class="smtt">地址：</label><label class="address">北京市海淀区中关村东路1号院</label>
							|<label class="smtt">电话：</label><label class="tel">010-83122549</label>
						</span>
                    <a class="choicehotel">查询酒店</a>
                </p>
                <div>
                </div>
                <div class="savenext">
                    <a>保存并下一步</a>
                </div>
            </div>
        </div>
        <div class="panel">
            <div id="CLD" class="clearfix datepicker">
                <table class="fl">
                    <tr>
                        <td class="tdyears clearfix" colspan="7">
                            <i class="fl prev"></i>
                            <!-- <select id="SY"></select> -->
                            <i class="fr next"></i>
                            <label id="SY"></label>
                        </td>
                    </tr>
                    <tr>
                        <td class="tdmonth" colspan="7">
                            <ul>
                                <li>1月</li>
                                <li>2月</li>
                                <li>3月</li>
                                <li class="on">4月</li>
                                <li>5月</li>
                                <li>6月</li>
                                <li>7月</li>
                                <li>8月</li>
                                <li>9月</li>
                                <li>10月</li>
                                <li>11月</li>
                                <li>12月</li>
                            </ul>
                        </td>
                    </tr>
                    <tr class="tdweek">
                        <td>周日</td>
                        <td>周一</td>
                        <td>周二</td>
                        <td>周三</td>
                        <td>周四</td>
                        <td>周五</td>
                        <td>周六</td>
                    </tr>
                </table>
                <div class="setvalue fr">
                    <h2>价格设置</h2>
                    <div><label class="bred">*</label><label>价格：</label><input type="text" class="price" maxlength="9"></div>
                    <div><label class="bred">*</label><label>库存：</label><input type="text" class="stock" maxlength="9"></div>
                    <div class="btn">
                        <a class="setvl">确定</a>
                        <a class="clearvl">全部清除</a>
                    </div>
                </div>
            </div>
            <label class="bred ml30">*</label><label class="gray9">按住Ctrl键，可实现多选日期。</label>
            <div class="allsave">
                <a>返回上一页</a>
                <a>全部提交</a>
            </div>
        </div>
    </div>
</div>
<div class="searchbox">
    <table class="tb">
        <tr>
            <td class="tb-txt">景区名称：</td>
            <td><input type="text" id="hotelname" class="inputxt"></td>
            <td class="tb-txt">所在城市：</td>
            <td>
                <select id="province"><option value="">--请选择--</option></select>
                <select id="city" class="ml10"><option value="">--请选择--</option></select>
                <select id="area" class="ml10"><option value="">--请选择--</option></select>
                <button class="search-btn">搜索</button>
            </td>
        </tr>
    </table>
    <img src="$!rs_path_jiuxiu/img/loading.gif" class='load_list'>
    <div class="hotelist list"></div>


</div>
<script  type='text/temple' id='province-tpl'>
	    <option value="">--请选择--</option>
	    <# for(var j=0; j<province.length; j++) { #>
	            <option value="<#= province[j].id#>"><#= province[j].name#></option>
	    <# } #>
	</script>
<script  type='text/temple' id='city-tpl'>
	    <option value="">--请选择--</option>
	    <# for(var j=0; j<city.length; j++) { #>
	            <option value="<#= city[j].id#>"><#= city[j].name#></option>
	    <# } #>
	</script>
<script  type='text/temple' id='area-tpl'>
	    <option value="">--请选择--</option>
	    <# for(var j=0; j<area.length; j++) { #>
	            <option value="<#= area[j].id#>"><#= area[j].name#></option>
	    <# } #>
	</script>
<script type="text/javascript" src="$rs_js_css_path_jiuxiu/js/sea.js"></script>
<script type="text/javascript" src="$rs_js_css_path_jiuxiu/js/seajs-preload.js"></script>
<script type="text/javascript" src="$rs_js_css_path_jiuxiu/js/config.js"></script>
<script>seajs.use("addhotel");</script>
