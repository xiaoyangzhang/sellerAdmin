            $.get(actionDefaultPath + '/AREA/list/',{'areaType': $('.countySelect').attr("areaType"),'areaParentCode':$('.citySelect').val()},function(data){
                $('.countySelect option').remove();
                var optionList = '';
                if(data && data.status == 200){
