<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">

	<bean id="userSecurityServiceRef" class="com.alibaba.dubbo.config.spring.ReferenceBean">
		<property name="interface" value="com.yimayhd.user.client.service.UserSecurityService" />
		<property name="application" ref="dubboApplicationConfig"/>
		<property name="registry" ref="dubboRegistryConfig"/>
		<property name="timeout" value="${consumer.dubbo.timeout}"/>
		<property name="check" value="${consumer.dubbo.check}"/>
        <property name="retries" value="${dubbo.retries}"/>
        <property name="version" value="${consumer.dubbo.user.version}"/>
	</bean>
	<bean id="importUserService" class="com.alibaba.dubbo.config.spring.ReferenceBean">
		<property name="interface" value="com.yimayhd.user.client.service.UserService" />
		<property name="application" ref="dubboApplicationConfig" />
		<property name="registry" ref="dubboRegistryConfig" />
		<property name="timeout" value="${consumer.dubbo.timeout}"/>
		<property name="check" value="${consumer.dubbo.check}"/>
        <property name="retries" value="${dubbo.retries}"/>
		<property name="version" value="${consumer.dubbo.user.version}" />
	</bean>

	<bean id="userServiceRef" class="com.alibaba.dubbo.config.spring.ReferenceBean">
		<property name="interface" value="com.yimayhd.user.client.service.UserService" />
		<property name="application" ref="dubboApplicationConfig" />
		<property name="registry" ref="dubboRegistryConfig" />
		<property name="timeout" value="${consumer.dubbo.timeout}"/>
		<property name="check" value="${consumer.dubbo.check}"/>
        <property name="retries" value="${dubbo.retries}"/>
		<property name="version" value="${consumer.dubbo.user.version}" />
	</bean>

	<!-- 区域ID 专用 不要修改 userAddressServiceRef 网络抖动 远程调用异常 dubbo check = true 一期完成后添加 -->
	<bean id="userAddressServiceRef" class="com.alibaba.dubbo.config.spring.ReferenceBean">
		<property name="interface"
			value="com.yimayhd.user.client.service.UserAddressService" />
		<property name="application" ref="dubboApplicationConfig" />
		<property name="registry" ref="dubboRegistryConfig" />
		<property name="timeout" value="${consumer.dubbo.timeout}"/>
		<property name="check" value="${consumer.dubbo.check}"/>
        <property name="retries" value="${dubbo.retries}"/>
		<property name="version" value="${consumer.dubbo.user.version}" />
	</bean>

	<bean id="dataCacheServiceRef" class="com.alibaba.dubbo.config.spring.ReferenceBean">
		<property name="interface"
			value="com.yimayhd.user.client.service.DataCacheService" />
		<property name="application" ref="dubboApplicationConfig" />
		<property name="registry" ref="dubboRegistryConfig" />
		<property name="timeout" value="${consumer.dubbo.timeout}"/>
		<property name="check" value="${consumer.dubbo.check}"/>
        <property name="retries" value="${dubbo.retries}"/>
		<property name="version" value="${consumer.dubbo.user.version}" />
	</bean>

	<bean id="cityDataCacheClient" class="com.yimayhd.user.client.cache.CityDataCacheClient">
		<property name="dataCacheService" ref="dataCacheServiceRef" />
	</bean>
	<bean id="publishGoodsApiExport" class="com.alibaba.dubbo.config.spring.ServiceBean">
              <property name="interface" value="org.yimayhd.sellerAdmin.api.PublishGoodsApi"/>
              <property name="ref" ref="publishGoodsApi"/>
              <property name="application" ref="dubboApplicationConfig"/>
              <property name="registry" ref="dubboRegistryConfig"/>
              <property name="protocol" ref="dubboProtocolConfig"/>
              <property name="version" value="${export.dubbo.version}"/>
              <property name="timeout" value="${export.dubbo.timeout}"/>
              <property name="retries" value="${dubbo.retries}"/>
       </bean>
</beans>